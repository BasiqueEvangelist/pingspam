{
  "schemaVersion": 1,
  "id": "pingspam",
  "version": "${version}",

  "name": "Pingspam",
  "description": "Adds discord-like pinging to Minecraft",
  "icon": "assets/pingspam/icon.png",
  "authors": [
    "BasiqueEvangelist",
    "HotKinkajou"
  ],
  "contributors": [
    "SpaceClouds42",
    "PotatoPresident"
  ],
  "contact": {
    "sources": "https://github.com/BasiqueEvangelist/pingspam",
    "issues": "https://github.com/BasiqueEvangelist/pingspam/issues/"
  },

  "license": "LGPL-3.0-only",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.basiqueevangelist.pingspam.PingSpam"
    ],
    "client": [
      "me.basiqueevangelist.pingspam.client.PingSpamClient"
    ]
  },
  "mixins": [
    "pingspam.mixins.json"
  ],

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/bRTMbKdmZt"
